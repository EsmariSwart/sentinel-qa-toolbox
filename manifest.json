{
  "manifest_version": 3,
  "name": "Sentinel QA Toolbox",
  "version": "1.0.0",
  "description": "A lightweight manual QA companion for layout, typography, and diagnostics.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/overlay.js"],
      "css": ["src/content/styles.css"]
    }
  ],
  "devtools_page": "src/devtools/devtools.html",
  "icons": {
    "128": "icons/icon128.png"
  }
}
